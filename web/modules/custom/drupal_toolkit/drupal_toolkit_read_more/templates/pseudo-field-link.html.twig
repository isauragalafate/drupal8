{#
/**
 * @file
 * Theme override to display the CSD pseudo field read more link.
 *
 * Available variables:
 * - link: Associative array with the properties (href, rel, title, hreflang) of the link.
 */
#}

{% if link %}
    <div class="node__links">
        <ul class="links inline">
            <li class="node-readmore">
                <a href="{{ link.href }}" rel="{{ link.rel }}" title="{{ link.title }}" hreflang="{{ link.hreflang }}"><span>{{ link.label }}</span></a>
            </li>
        </ul>
    </div>
{% endif %}
